<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OlsoTextViewStyle18" parent="OlsoTextViewStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OlsoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textColor">@color/OLSO_grey</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/russo_one_regular</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>