<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintCategoryToolbarWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/spacing_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/linearEditTextWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginEnd="@dimen/spacing_17"
        android:layout_marginRight="@dimen/spacing_17"
        android:background="@drawable/rounded_white_bg"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageBack">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageLoop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginLeft="@dimen/spacing_10"
            app:srcCompat="@drawable/ic_search" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editCategorySearch"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginEnd="@dimen/spacing_23"
            android:layout_marginRight="@dimen/spacing_23"
            android:background="@color/white"
            android:fontFamily="@font/russo_one_regular"
            android:gravity="center"
            android:hint="@string/search"
            android:textColor="@color/black"
            android:textColorHint="@color/OLSO_grey"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>