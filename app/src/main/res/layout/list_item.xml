<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintListItemWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_23"
    android:layout_marginLeft="@dimen/spacing_23"
    android:layout_marginEnd="@dimen/spacing_23"
    android:layout_marginRight="@dimen/spacing_23"
    android:layout_marginBottom="@dimen/spacing_20"
    tools:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImageFoodItemWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageFoodItem"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/rec_rounded_image_bg" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearFoodDetailWrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_20"
        android:paddingLeft="@dimen/spacing_20"
        android:paddingEnd="@dimen/spacing_20"
        android:paddingRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardImageFoodItemWrapper"
        app:layout_constraintRight_toLeftOf="@+id/imageDelete"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textFoodName"
            style="@style/WhiteTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="22sp"
            tools:text="Aw Chicken" />

        <LinearLayout
            android:id="@+id/linearFoodDetailInfoWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textIdMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one_regular"
                android:textColor="@color/OLSO_grey"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="id: 1234"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageArea"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/ic_location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one_regular"
                android:textColor="@color/OLSO_grey"
                android:textSize="13sp"
                tools:text="Kenyan" />

            <View
                android:id="@+id/verticalLineDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_5"
                android:layout_marginLeft="@dimen/spacing_5"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_marginRight="@dimen/spacing_5"
                android:background="@color/OLSO_grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textFoodCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one_regular"
                android:textColor="@color/OLSO_grey"
                android:textSize="13sp"
                tools:text="Goat" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageDelete"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>