<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFeatureCategoryItemWrapper"
    android:layout_width="200dp"
    android:layout_height="237dp"
    android:layout_marginEnd="@dimen/spacing_25"
    android:layout_marginRight="@dimen/spacing_25"
    app:cardBackgroundColor="@color/jaguar"
    app:cardCornerRadius="@dimen/spacing_21"
    app:cardElevation="@dimen/spacing_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintFeatureCategoryItemWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_25">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageFood"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/image_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textItem"
            style="@style/OlsoTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageFood"
            tools:text="Random food" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>